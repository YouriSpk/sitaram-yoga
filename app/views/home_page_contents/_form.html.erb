<%= simple_form_for(@home_page_content) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :content, as: :text, input_html: { class: 'ckeditor' } %>
    <%= f.input :photo, as: :file, label: "Photo", hint: f.object.photo.attached? ? image_tag(f.object.photo.variant(resize: "300x300")) : nil %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
